<Window x:Class="Desktop.View.EmployeeAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop.View"
        mc:Ignorable="d"
        Title="EmployeeAddWindow" Height="450" Width="360">
    <Border BorderThickness="2" BorderBrush="Gray" Width="300" Height="300">
        <StackPanel>
            <Label Content="Фотография"  FontWeight="Bold" Foreground="DarkGray"/>
            <Button Content="Выберите фотографию" Width="348" Style="{StaticResource RoundedButtonStyle}"/>

            <Label Content="Имя"  FontWeight="Bold" Foreground="DarkGray"/>
            <TextBox Width="347"/>

            <Label Content="Фамилия"  FontWeight="Bold" Foreground="DarkGray"/>
            <TextBox Width="347"/>

            <Label Content="Отчество"  FontWeight="Bold" Foreground="DarkGray"/>
            <TextBox Width="347"/>
        </StackPanel>
    </Border>
</Window>
